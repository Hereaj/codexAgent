modules = ["nodejs-20", "web", "postgresql-16"]
run = "run"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "run"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Full-Stack Dev"

[[workflows.workflow]]
name = "Run HTML Server"
author = 41296124
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m http.server 5000 --bind 0.0.0.0"

[[workflows.workflow]]
name = "Serve HTML"
author = 41296124
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx http-server . -p 5000 -a 0.0.0.0"

[[workflows.workflow]]
name = "Full-Stack Dev"
author = 41296124
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run install:all && npm run build && npm start"

[[ports]]
localPort = 5000
externalPort = 80
